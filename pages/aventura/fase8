import { useState, useEffect } from 'react';
import { useRouter } from 'next/router';

export default function FaseHIMYM() {
  const router = useRouter();
  const [jogoAtivo, setJogoAtivo] = useState('menu');
  const [pontuacao, setPontuacao] = useState(0);
  const [respostasCorretas, setRespostasCorretas] = useState(0);
  const [perguntaAtual, setPerguntaAtual] = useState(0);
  const [playbook, setPlaybook] = useState([]);
  const [tempoRestante, setTempoRestante] = useState(30);
  const [jogoCompleto, setJogoCompleto] = useState(false);

  const perguntas = [
    {
      pergunta: "Se voc√™s estivessem no MacLaren's, qual seria o drink perfeito para compartilhar?",
      opcoes: [
        "Dois Robin Scherbatsky (com sombrinha) üçπ",
        "Um Red Dragon pra dividir ‚ù§Ô∏è",
        "Cerveja gelada porque somos simples assim üç∫",
        "Qualquer coisa, desde que seja juntos üíï"
      ],
      correta: 3
    },
    {
      pergunta: "Qual seria a jogada do 'Playbook do Amor' dele para conquistar voc√™?",
      opcoes: [
        "A 'Cat Lady' - aparecer com 5 gatinhos üê±",
        "A 'Nerd Girl' - falar sobre tecnologia üíª", 
        "A 'Best Friend' - ser seu melhor amigo primeiro üë´",
        "A 'True Love' - ser genu√≠no e verdadeiro üíñ"
      ],
      correta: 3
    },
    {
      pergunta: "Se ele fizesse uma 'Robin Sparkles' para voc√™, qual seria o tema?",
      opcoes: [
        "üéµ 'Let's go to the mall... do amor!' üéµ",
        "üéµ 'Sandcastles in the Sand... do cora√ß√£o' üéµ",
        "üéµ 'Two Cats in Love' üéµ",
        "üéµ 'PS: I Love You' üéµ"
      ],
      correta: 2
    }
  ];

  const barneyPlays = [
    "üíº The Programmer - Impressionar com c√≥digos",
    "üê± The Cat Whisperer - Aparecer com gatinhos",
    "üéÆ The Gamer Girl - Falar sobre jogos",
    "üíª The Tech Support - Resolver todos os problemas do PC",
    "‚ù§Ô∏è The Genuine Guy - Ser aut√™ntico (LEGENDARY!)"
  ];

  useEffect(() => {
    let timer;
    if (jogoAtivo === 'tempo' && tempoRestante > 0) {
      timer = setTimeout(() => {
        setTempoRestante(tempoRestante - 1);
      }, 1000);
    } else if (tempoRestante === 0 && jogoAtivo === 'tempo') {
      setJogoCompleto(true);
    }
    return () => clearTimeout(timer);
  }, [tempoRestante, jogoAtivo]);

  const responder = (opcao) => {
    if (opcao === perguntas[perguntaAtual].correta) {
      setRespostasCorretas(respostasCorretas + 1);
      setPontuacao(pontuacao + 100);
    }
    
    if (perguntaAtual < perguntas.length - 1) {
      setPerguntaAtual(perguntaAtual + 1);
    } else {
      setJogoAtivo('playbook');
    }
  };

  const adicionarPlay = (play) => {
    setPlaybook([...playbook, play]);
    setPontuacao(pontuacao + 50);
    if (playbook.length >= 2) {
      setJogoAtivo('tempo');
    }
  };

  const finalizarJogo = () => {
    setJogoCompleto(true);
  };

  const avancar = () => {
    router.push("/aventura/final-game");
  };

  return (
    <div style={pubStyle}>
      {/* Background do MacLaren's */}
      <div style={backgroundOverlay}></div>
      
      <div style={contentContainer}>
        {jogoAtivo === 'menu' && (
          <div style={menuContainer}>
            <h1 style={titleStyle}>
              üç∫ MacLaren's Pub üç∫
            </h1>
            <div style={logoContainer}>
              <div style={pubLogo}>üçª</div>
            </div>
            <p style={subtitleStyle}>
              "Kids, esta √© a hist√≥ria de como eu pedi sua m√£e em casamento..."
            </p>
            <div style={friendsContainer}>
              <div style={friend}>üë®‚Äçüíº Ted</div>
              <div style={friend}>üë©‚Äçüíº Robin</div>
              <div style={friend}>üë®‚Äçüé∏ Marshall</div>
              <div style={friend}>üë©‚Äçüé® Lily</div>
              <div style={friend}>üëî Barney</div>
            </div>
            <button
              onClick={() => setJogoAtivo('perguntas')}
              style={startButton}
            >
              LEGENDARY! Come√ßar üéØ
            </button>
          </div>
        )}

        {jogoAtivo === 'perguntas' && (
          <div style={gameContainer}>
            <h2 style={questionTitle}>
              üì∫ Quiz da Turma üì∫
            </h2>
            <div style={scoreDisplay}>
              Pontua√ß√£o: {pontuacao} | Pergunta {perguntaAtual + 1}/{perguntas.length}
            </div>
            
            <div style={questionContainer}>
              <h3 style={questionText}>
                {perguntas[perguntaAtual].pergunta}
              </h3>
              
              <div style={optionsContainer}>
                {perguntas[perguntaAtual].opcoes.map((opcao, index) => (
                  <button
                    key={index}
                    onClick={() => responder(index)}
                    style={optionButton}
                  >
                    {opcao}
                  </button>
                ))}
              </div>
            </div>
          </div>
        )}

        {jogoAtivo === 'playbook' && (
          <div style={playbookContainer}>
            <h2 style={playbookTitle}>
              üìö O PLAYBOOK DO AMOR üìö
            </h2>
            <p style={playbookSubtitle}>
              Barney est√° te ajudando! Escolha as jogadas para o seu "Playbook":
            </p>
            
            <div style={playsContainer}>
              {barneyPlays.map((play, index) => (
                <div
                  key={index}
                  style={{
                    ...playCard,
                    backgroundColor: playbook.includes(play) ? '#ffd700' : '#fff'
                  }}
                  onClick={() => !playbook.includes(play) && adicionarPlay(play)}
                >
                  {play}
                </div>
              ))}
            </div>
            
            <div style={selectedPlays}>
              <h4>Jogadas Selecionadas:</h4>
              {playbook.map((play, index) => (
                <div key={index} style={selectedPlay}>{play}</div>
              ))}
            </div>
            
            {playbook.length >= 3 && (
              <button
                onClick={() => setJogoAtivo('tempo')}
                style={continueButton}
              >
                SUIT UP! Continuar üëî
              </button>
            )}
          </div>
        )}

        {jogoAtivo === 'tempo' && !jogoCompleto && (
          <div style={timeGameContainer}>
            <h2 style={timeTitle}>
              ‚è∞ √öLTIMA CHAMADA! ‚è∞
            </h2>
            <p style={timeSubtitle}>
              Marshall e Lily est√£o ajudando com o tempo! Voc√™ tem {tempoRestante} segundos para decidir...
            </p>
            
            <div style={clockContainer}>
              <div style={clockFace}>
                <div style={clockHand}>{tempoRestante}</div>
              </div>
            </div>
            
            <div style={finalQuestion}>
              <h3>Se tivesse que escolher UMA coisa que mais ama nele, seria:</h3>
              <div style={finalOptions}>
                <button onClick={finalizarJogo} style={finalOption}>
                  ‚ù§Ô∏è O jeito que me faz rir
                </button>
                <button onClick={finalizarJogo} style={finalOption}>
                  ü§ó Como me sinto segura com ele
                </button>
                <button onClick={finalizarJogo} style={finalOption}>
                  ‚ú® Como ele me faz querer ser melhor
                </button>
                <button onClick={finalizarJogo} style={finalOption}>
                  üíï Tudo isso e muito mais
                </button>
              </div>
            </div>
          </div>
        )}

        {jogoCompleto && (
          <div style={endGameContainer}>
            <h1 style={legendaryTitle}>
              üéâ LEGENDARY! üéâ
            </h1>
            <div style={finalScore}>
              Pontua√ß√£o Final: {pontuacao}
            </div>
            <div style={barneyApproval}>
              <div style={barneyEmoji}>üëî</div>
              <p style={barneyQuote}>
                "Barney Stinson aprova! Essa hist√≥ria ser√°... LEGENDARY!"
              </p>
            </div>
            <div style={storyEnd}>
              <p style={tedVoice}>
                "E foi assim, crian√ßas, que descobri que o verdadeiro amor n√£o precisa de um playbook... 
                s√≥ precisa ser verdadeiro."
              </p>
            </div>
            <button
              onClick={avancar}
              style={nextAdventureButton}
            >
              Continuar a hist√≥ria üìñ
            </button>
          </div>
        )}
      </div>
    </div>
  );
}

